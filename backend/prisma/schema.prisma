generator client {
  provider = "prisma-client"
  output   = "../src/generated/"
}

datasource db {
  provider = "postgresql"
}

model KB {
  id        Int       @id @default(autoincrement())
  category  String
  useCase   String
  qualities String[]
  specs     String[]
  convRate  Float
  outliers  String[]
  archives  LB_Archive[]
  @@unique([category, useCase])
}

model LB_Archive {
  id        Int      @id @default(autoincrement())
  parentId  Int
  parent    KB       @relation(fields: [parentId], references: [id], onDelete: Cascade)
  category  String
  useCase   String
  qualities String[]
  specs     String[]
  convRate  Float
  outliers  String[]
  rationale String
  createdAt DateTime @default(now())
}
